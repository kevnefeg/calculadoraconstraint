<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <EditText
        android:id="@+id/calculations"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:layout_marginTop="192dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculations" />

    <Button
        android:id="@+id/btnac"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="limpiar"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnborrar"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="borrar"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnac"
        app:layout_constraintTop_toTopOf="@id/btnac"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/num7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnborrar"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/num8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/num7"
        app:layout_constraintTop_toTopOf="@id/num7"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/num9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/num8"
        app:layout_constraintTop_toTopOf="@id/num7"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/numdividir"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#EB6309"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/num9"
        app:layout_constraintTop_toTopOf="@id/num7" />


    <Button
        android:id="@+id/num4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/num7"
        app:layout_constraintTop_toBottomOf="@id/num7"
        />


    <Button
        android:id="@+id/num5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#EB6309"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/num4"
        app:layout_constraintTop_toTopOf="@id/num4" />


    <Button
        android:id="@+id/num6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/num5"
        app:layout_constraintTop_toTopOf="@id/num5"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/nummulti"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#EB6309"
        android:text="*"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/num6"
        app:layout_constraintTop_toTopOf="@id/num6" />




    <Button
        android:id="@+id/num1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/num4"
        app:layout_constraintTop_toBottomOf="@id/num4"
        />


    <Button
        android:id="@+id/num2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#EB6309"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/num1"
        app:layout_constraintTop_toTopOf="@id/num1" />


    <Button
        android:id="@+id/num3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/num2"
        app:layout_constraintTop_toTopOf="@id/num2"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/numrest"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#EB6309"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/num3"
        app:layout_constraintTop_toTopOf="@id/num3" />


    comentario

    <Button
        android:id="@+id/punto"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/num1"
        app:layout_constraintTop_toBottomOf="@id/num1"
        />


    <Button
        android:id="@+id/num0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#EB6309"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/punto"
        app:layout_constraintTop_toTopOf="@id/punto" />


    <Button
        android:id="@+id/igual"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#EB6309"
        android:textColor="@color/white"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/num0"
        app:layout_constraintTop_toTopOf="@id/num0"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/sumar"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#EB6309"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/igual"
        app:layout_constraintTop_toTopOf="@id/igual" />





</androidx.constraintlayout.widget.ConstraintLayout>